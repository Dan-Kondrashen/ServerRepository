    <style name="fontHeader" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/roboto_slab_variable_font_wght</item>
    </style>
    <style name="custom_checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">?attr/colorPrimaryUltraDark</item>
        <item name="colorOnSurface">?attr/colorPrimaryUltraDark</item>
        <item name="android:textColor">?attr/colorPrimaryUltraDark</item>
        <item name="colorSecondary">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="buttonTint">?attr/colorPrimaryUltraDark</item>
    </style>
    <style name="ThemeMenu.bar_popup"  parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">?attr/colorPrimaryLight</item>
        <item name="android:background">?attr/colorPrimaryLight</item>
        <item name="android:textColor">?attr/colorPrimaryUltraDark</item>
    </style>
    <style name="snackbar_style" parent="@style/Widget.Design.Snackbar">
        <item name="android:background">?colorPrimaryLight</item>
        <item name="android:textColor">?colorPrimaryUltraDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="snackbarButtonStyle">@style/snackbarButton_style</item>
        <item name="snackbarTextViewStyle">@style/snackbar_text_style</item>
    </style>
    <style name="snackbarButton_style" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="main_button_style" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?colorPrimaryUltraDark</item>
        <item name="android:background">@drawable/btn_header</item>
    </style>
    <style name="main_button_style_theme_red" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?colorPrimaryUltraDark</item>
        <item name="android:background">@drawable/btn_header_red_theme</item>
    </style>
    <style name="cancel_main_button_style" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_header</item>
    </style>
    <style name="list_button_style" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?colorPrimaryUltraDark</item>
        <item name="android:background">@drawable/hidden_list_with_arrow</item>
    </style>
    <style name="open_list_button_style" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?colorPrimaryUltraDark</item>
        <item name="android:background">@drawable/open_list_with_arrow</item>
    </style>
    <style name="snackbar_text_style" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?colorPrimaryUltraDark</item>
    </style>
    <style name="BarBack" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar</item>
        <item name="background">@drawable/actionbar</item>
    </style>

    <style name="alerDialogCustomTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">?colorTextHeader</item>
        <item name="android:windowBackground">@drawable/border_for_item_animation</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
    </style>

    <style name="alerDialogCustomThemeRed" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">?colorPrimaryUltraDark</item>
        <item name="android:windowBackground">@drawable/border_for_item_animation</item>
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight2</item>
    </style>

    <style name="hintForCustomEditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="boxStrokeColor">?colorPrimaryUltraDark</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>


    <style name="mainTextOnBack" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorTextHeader</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

