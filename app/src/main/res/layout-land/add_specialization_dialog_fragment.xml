<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scroll_mainInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:paddingBottom="3dp"
                android:text="@string/add_spec_title"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />


            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexboxLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayoutDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="3dp"
                        android:text="@string/add_specialization_text"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/user_specialization"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_dropdown"
                        android:padding="15dp"
                        android:popupBackground="@color/colorPrimaryLight"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_container3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:text="@string/add_education_text"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/user_education"
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_dropdown"
                        android:padding="15dp"
                        android:popupBackground="@color/colorPrimaryLight"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_container3" />

                    <CheckBox
                        android:id="@+id/add_file_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="@string/add_file_question"
                        android:textAlignment="center"
                        android:textColor="?colorPrimaryUltraDark"
                        android:textSize="16sp"
                        android:theme="@style/custom_checkbox" />

                    <LinearLayout
                        android:id="@+id/file_info_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/file_name"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/fileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/et_custom"
                            android:gravity="center"
                            android:hint="@string/hintFileName"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:padding="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_file_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/button_chose_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/btn_header"
                        android:padding="10dp"
                        android:text="@string/chose_doc" />

                    <TextView
                        android:id="@+id/hintText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chosed_file"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDialog" />
                    <ImageView
                        android:id="@+id/image1"
                        android:visibility="gone"
                        android:layout_width="250dp"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hintText" />


                    <com.github.barteksc.pdfviewer.PDFView
                        android:id="@+id/pdf1"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scroll_mainInfo">

                <Button
                    android:id="@+id/save_btn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="?colorPrimaryUltraDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save" />

                <Button
                    android:id="@+id/cancel_btn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:textColor="?colorPrimaryUltraDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>