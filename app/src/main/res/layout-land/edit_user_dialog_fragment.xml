<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <LinearLayout
            android:layout_marginTop="@dimen/space10"
            android:id="@+id/linearLayoutDialog"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/titleText"
                android:text="@string/edit_user"
                android:gravity="center"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:paddingBottom="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_dop_infio"
                android:textSize="@dimen/h5"
                android:layout_gravity="center"
                android:paddingBottom="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:paddingTop="@dimen/space8"
                style="@style/mainTextOnBack"
                android:textStyle="bold"
                android:paddingBottom="@dimen/space5"
                android:layout_height="wrap_content"
                android:text="@string/user_info"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userFname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="?colorPrimaryUltraDark"
                    app:hintTextAppearance="@style/hintForCustomEditTextStyle"
                    android:hint="@string/fname"
                    style="@style/mainCustomTextInputLayoutStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/userFnameInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="200dp"
                        android:inputType="textMultiLine"
                        android:maxWidth="220dp"
                        android:maxLength="180"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textColor="?colorPrimaryUltraDark"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userLnameLayout"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/space5"
                    android:layout_marginEnd="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:textColorHint="?colorPrimaryUltraDark"
                    app:hintTextAppearance="@style/hintForCustomEditTextStyle"
                    android:hint="@string/lname"
                    style="@style/mainCustomTextInputLayoutStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/userLnameInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="200dp"
                        android:inputType="textMultiLine"
                        android:maxWidth="220dp"
                        android:maxLength="180"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textColor="?colorPrimaryUltraDark"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userMnameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="?colorPrimaryUltraDark"
                    app:hintTextAppearance="@style/hintForCustomEditTextStyle"
                    android:hint="@string/mname"
                    style="@style/mainCustomTextInputLayoutStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/userMnameInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="200dp"
                        android:inputType="textMultiLine"
                        android:maxWidth="220dp"
                        android:maxLength="180"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textColor="?colorPrimaryUltraDark"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:paddingTop="@dimen/space8"
                style="@style/mainTextOnBack"
                android:textStyle="bold"
                android:paddingBottom="@dimen/space5"
                android:layout_height="wrap_content"
                android:text="@string/identificationData"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userEmailLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/space5"
                    android:textColorHint="?colorPrimaryUltraDark"
                    app:hintTextAppearance="@style/hintForCustomEditTextStyle"
                    android:hint="@string/email"
                    style="@style/mainCustomTextInputLayoutStyle">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/userEmailInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:gravity="center"
                        android:maxWidth="220dp"
                        android:maxLines="1"
                        android:minWidth="200dp"
                        android:paddingStart="4dp"
                        android:paddingTop="@dimen/space8"
                        android:paddingEnd="4dp"
                        android:paddingBottom="@dimen/space8"
                        android:textColor="?colorPrimaryUltraDark"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userPhoneLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColorHint="?colorPrimaryUltraDark"
                    app:hintTextAppearance="@style/hintForCustomEditTextStyle"
                    android:hint="@string/phone"
                    style="@style/mainCustomTextInputLayoutStyle">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/userPhoneInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:gravity="center"
                        android:maxWidth="220dp"
                        android:maxLines="1"
                        android:minWidth="200dp"
                        android:paddingStart="4dp"
                        android:paddingTop="@dimen/space8"
                        android:paddingEnd="4dp"
                        android:paddingBottom="@dimen/space8"
                        android:textColor="?colorPrimaryUltraDark"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/space200"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginStart="@dimen/space5"
                android:layout_marginTop="@dimen/space3">
                <Button
                    android:id="@+id/change_pass_dialog_call"
                    android:layout_width="@dimen/space200"
                    android:text="@string/changePasswordData"
                    style="@style/main_button_style"

                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/space8"
                    style="@style/mainTextOnBack"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/space5"
                    android:layout_height="wrap_content"
                    android:text="@string/user_status"/>

                <Spinner
                    android:id="@+id/user_status_selector"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/space120"
                    android:layout_marginEnd="@dimen/space120"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/space8"
                    android:background="@drawable/selector_dropdown"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/space5"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space8"
                android:paddingBottom="@dimen/space20"
                android:gravity="center"

                >
                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="@dimen/space180"
                    android:text="@string/save"
                    style="@style/main_button_style"
                    android:layout_marginEnd="@dimen/space3"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="@dimen/space180"
                    android:text="@string/cancel"
                    android:layout_marginStart="@dimen/space3"
                    style="@style/main_button_style"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>