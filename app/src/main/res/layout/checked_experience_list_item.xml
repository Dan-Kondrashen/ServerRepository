<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:elevation="8dp"
    android:translationZ="100dp"
    android:background="@drawable/border_simple_list_item"
    xmlns:tools="http://schemas.android.com/tools">
    <CheckBox
        android:id="@+id/add_exp_check"
        android:layout_alignParentStart="true"
        android:theme="@style/custom_checkbox"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:textColor="?colorPrimaryUltraDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/image_card"
        android:layout_toEndOf="@+id/add_exp_check"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/role_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/role"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="@dimen/space5"/>

            <TextView
                android:id="@+id/role_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:minLines="1"
                android:textSize="18sp"
                android:padding="@dimen/space5"
                tools:text="gjxnfn nfjsbef" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/exp_time_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/exp_time_text_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/experienceText"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="@dimen/space5"/>

            <TextView
                android:id="@+id/exp_time_info"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:padding="@dimen/space5"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:minLines="1"
                android:textSize="18sp"
                tools:text="gjxnf sdvfboksdkkosdfg" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/place_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <LinearLayout
            android:id="@+id/list_item_status_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/list_item_status_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center_vertical|start"
                android:textSize="16sp"
                android:padding="@dimen/space5"
                android:ellipsize="end"
                android:minLines="1"
                android:maxLines="3"
                android:text="@string/status"/>
            <TextView
                android:id="@+id/list_item_status_info"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:padding="@dimen/space5"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="16sp"
                android:ellipsize="end"
                android:minLines="1"
                android:maxLines="3"
                tools:text="Подтверждена!"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/list_item_experience_desc_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView android:id="@+id/image_card"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:gravity="center"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/text_document_svg"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>