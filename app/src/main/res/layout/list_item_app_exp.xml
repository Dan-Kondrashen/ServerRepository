<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space3"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:elevation="8dp"
    android:translationZ="100dp"
    android:background="@drawable/border_simple_list_item"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/exp_time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp">
        <ImageButton
            android:id="@+id/edit_btn"
            android:layout_height="@dimen/space40"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="40dp"
            android:background="@drawable/edit_image_btn"
            android:contentDescription="@string/delete"/>
        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_height="@dimen/space45"
            android:visibility="gone"
            android:layout_width="@dimen/space45"
            android:background="@drawable/delete_image_btn"
            android:contentDescription="@string/delete"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/type_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:layout_below="@+id/exp_time_view"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/operation_type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/type_info"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingStart="@dimen/space8"
                android:paddingEnd="@dimen/space8"
                android:paddingTop="@dimen/space5"
                android:paddingBottom="@dimen/space8"
                android:background="@drawable/border_for_document_maininfo"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:minLines="1"
                android:textSize="18sp"
                tools:text="gjxnfn nfjsbef" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/place_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:layout_below="@+id/type_view"
        android:layout_marginTop="@dimen/space3"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:text="@string/pointsNum"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/points_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border_for_document_maininfo"
            android:ellipsize="end"
            android:minWidth="@dimen/space90"
            android:maxWidth="@dimen/space140"
            android:gravity="center|end"
            android:maxLines="2"
            android:paddingStart="@dimen/space8"
            android:paddingTop="@dimen/space5"
            android:paddingEnd="@dimen/space8"
            android:paddingBottom="@dimen/space8"
            android:textSize="18sp"
            tools:text="gj" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_experience_main_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space5"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_below="@+id/place_view">
        <LinearLayout
            android:id="@+id/list_item_user_exp_reason_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="4dp">

    <!--        android:visibility="gone"-->
            <TextView
                android:id="@+id/list_item_experience_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="@dimen/space3"
                android:textAlignment="textStart"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:ellipsize="end"
                android:text="@string/reason" />
            <TextView
                android:id="@+id/list_item_reason_desc_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/space5"
                android:layout_marginEnd="4dp"
                android:padding="@dimen/space3"
                android:textSize="16sp"
                android:maxLines="6"
                android:ellipsize="end"
                tools:text="sdvfhhggdndhgdsrfgb"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView android:id="@+id/image_card"
            android:layout_width="@dimen/space110"
            android:layout_height="@dimen/space110"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/space3"
            android:layout_marginBottom="@dimen/space8"
            android:gravity="center"
            app:cardCornerRadius="@dimen/space20">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/space110"
                android:gravity="center"
                android:src="@drawable/text_document_svg"
                android:scaleType="matrix"
                android:layout_height="@dimen/space110"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:gravity="end"
                android:background="?colorPrimaryLight">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:padding="@dimen/space5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    tools:text="Название документа"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/space8"
                    android:layout_marginBottom="@dimen/space5"
                    android:src="@drawable/download_svg"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_below="@+id/list_item_experience_main_info_view">
        <TextView
            android:padding="4dp"
            android:id="@+id/list_item_status_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center_vertical|start"
            android:textSize="16sp"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="3"
            android:text="@string/status"/>
        <TextView
            android:id="@+id/list_item_status_info"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="16sp"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="3"
            tools:text="@string/confirmed"/>
    </LinearLayout>
</RelativeLayout>