<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space10"
    android:layout_marginStart="@dimen/spaceLR">
    <LinearLayout
        android:id="@+id/chatView"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/space180"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_block_square_light"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/chatInfo"
            android:maxWidth="@dimen/maxWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space10"
            android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
            android:textColor="?colorPrimaryUltraDark"
            android:textSize="@dimen/h3" />
        <TextView
            android:id="@+id/idView"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:indeterminateTint="?colorPrimaryDark"
                android:layout_width="@dimen/space30"
                android:layout_height="@dimen/space30"
                android:layout_alignParentStart="true"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="@dimen/space10" />

            <TextView
                android:id="@+id/chatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="37dp"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/space5"
                android:drawablePadding="@dimen/space5"
                android:maxWidth="@dimen/maxWidth"
                android:paddingStart="@dimen/space10"
                android:paddingEnd="@dimen/space10"
                tools:text="2024-05-25 12:20:22"
                android:textAlignment="textEnd"
                android:textColor="?colorPrimaryUltraDark"
                android:textSize="@dimen/h4"
                app:drawableRightCompat="@drawable/clock" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/space5"
        android:clipToPadding="false"
        android:layout_marginEnd="@dimen/space5"
        android:layout_toStartOf="@id/chatView"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/delete_btn"
            android:layout_width="@dimen/space45"
            android:layout_height="@dimen/space45"
            android:padding="@dimen/space5"
            android:background="@drawable/comment_block_square_light"
            android:src="@drawable/delete_image_btn"
            android:contentDescription="@string/delete" />
        <ImageView
            android:id="@+id/update_btn"
            android:layout_marginTop="@dimen/space5"
            android:padding="@dimen/space10"
            android:layout_width="@dimen/space45"
            android:layout_height="@dimen/space45"
            android:background="@drawable/comment_block_square_light"
            android:src="@drawable/edit_image_btn"
            android:contentDescription="@string/update" />


    </LinearLayout>
</RelativeLayout>