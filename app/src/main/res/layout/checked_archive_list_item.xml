<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:elevation="8dp"
    android:translationZ="100dp"
    android:background="@drawable/border_simple_list_item"
    xmlns:tools="http://schemas.android.com/tools">
    <CheckBox
        android:id="@+id/add_archive_check"
        android:layout_alignParentStart="true"
        android:theme="@style/custom_checkbox"
        android:layout_centerVertical="true"
        android:textColor="?colorPrimaryUltraDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/archiveName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/response"
        android:maxLines="3"
        android:textStyle="bold"
        android:textSize="@dimen/h3"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/add_archive_check"
        android:padding="@dimen/space5"/>
    <TextView
        android:id="@+id/archiveKeyWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/archiveId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>