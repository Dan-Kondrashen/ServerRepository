<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space3"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:elevation="8dp"
    android:translationZ="100dp"
    android:background="@drawable/border_simple_list_item"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/use_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/company_info_view"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/company_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/company_name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/company_info"
                    android:layout_width="match_parent"
                    android:padding="@dimen/space3"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:minLines="1"
                    android:textSize="18sp"
                    tools:text="gjxnf sdvfboksdkkosdfg" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_fio_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/userFIO_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/userFIO"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/userFIO_info"
                    android:layout_width="match_parent"
                    android:padding="@dimen/space3"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:minLines="1"
                    android:textSize="18sp"
                    tools:text="gjxnf sdvfboksdkkosdfg" />
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView android:id="@+id/image_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/space5"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="6dp"
            android:gravity="center"
            app:cardCornerRadius="35dp">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/user_svg"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/role_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"

        android:orientation="horizontal"
        android:layout_below="@+id/use_info_view"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/user_type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/role_info"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:minLines="1"
                android:textSize="18sp"
                tools:text="gjxnfn nfjsbef" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"

        android:orientation="horizontal"
        android:layout_below="@+id/role_view"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/status"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/status_info"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:minLines="1"
            android:textSize="18sp"
            tools:text="gjxnfn nfjsbef" />
    </LinearLayout>
</RelativeLayout>