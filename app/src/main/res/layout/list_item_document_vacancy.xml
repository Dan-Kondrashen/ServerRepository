<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:elevation="8dp"
    android:translationZ="1000dp"
    android:transitionName="@string/unanimated_item"
    android:background="@drawable/border_for_main_viewed_item"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView android:id="@+id/image_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="100dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView

            android:layout_gravity="center"
            android:src="@drawable/user_svg"
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/list_item_document_main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_below="@id/image_card">
        <TextView
            android:id="@+id/list_item_document_title_text_view"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:background="@drawable/border_for_document_preview"
            android:textStyle="bold"
            android:padding="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:ellipsize="end"
            android:minLines="2"
            android:maxLines="3"
            tools:text="Название вакансии" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:background="@drawable/delete_image_btn"
                android:contentDescription="@string/delete" />
            <ImageButton
                android:id="@+id/chat_btn"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:background="@drawable/comments_dark_svg"
                android:contentDescription="@string/delete" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_document_viewed_count_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/list_item_document_main_view">
        <TextView
            android:id="@+id/list_item_document_viewed_count_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="7dp"

            android:gravity="center"
            android:textSize="16sp" android:textStyle="bold|italic"/>
        <TextView
            android:id="@+id/list_item_document_viewed_count_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border_for_document_preview"
            android:padding="7dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/list_item_document_special_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_document_viewed_count_view"
        android:padding="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        tools:text="Специальности"/>
    <LinearLayout
        android:id="@+id/list_item_document_company_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_document_special_text_view"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/list_item_document_company_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginEnd="5dp"
            android:text="@string/company_name"/>
        <TextView
            android:id="@+id/list_item_document_company_info_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="4dp"
            tools:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_document_author_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_document_company_view"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/list_item_document_author_text_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginEnd="5dp"
            android:text="@string/userFIO"/>
        <TextView
            android:id="@+id/list_item_document_author_info_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="4dp"
            tools:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_document_know_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_document_author_view"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/list_item_document_know_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginEnd="5dp"
            android:text="@string/important_knowledge"/>
        <TextView
            android:id="@+id/list_item_document_know_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="4dp"
            tools:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_document_exp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_document_know_view"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/list_item_document_exp_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@string/experienceText" />
        <TextView
            android:id="@+id/list_item_document_exp_info"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="4dp"
            android:textSize="16sp"
            tools:text="" />
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/list_item_document_salary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch"

        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/list_item_document_exp_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="4dp"
                android:gravity="center|start"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/document_salary_label"/>
            <TextView
                android:id="@+id/list_item_document_salary_start_text_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:textSize="14sp"
                android:padding="4dp"
                android:layout_marginStart="5dp"
                tools:text="Зарплата От" />
            <TextView
                android:id="@+id/list_item_document_salary_end_text_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="4dp"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                tools:text="Зарплата До" />
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_document_actuality_view"
        android:layout_below="@id/list_item_document_salary_view"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="15dp"
        app:alignItems="stretch"
        app:alignContent="stretch"
        app:flexWrap="wrap">
        <LinearLayout
            android:id="@+id/list_item_document_city_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_document_salary_view"
            android:visibility="gone"
            android:gravity="center"
            app:alignContent="stretch"
            app:alignItems="stretch"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_document_city_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="center|fill_horizontal"
                android:padding="4dp"
                android:text="@string/citys_text" />

            <TextView
                android:id="@+id/list_item_document_city_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:maxLines="4"
                android:padding="4dp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_item_document_date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_document_city_view"
            android:orientation="horizontal"

            android:gravity="center">
            <TextView
                android:id="@+id/list_item_document_date_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|start"

                android:padding="4dp"
                android:layout_marginEnd="5dp"
                android:text="@string/dateText"/>
            <TextView
                android:id="@+id/list_item_document_date_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="4dp"
                android:text="@string/plaseHolderText"/>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <TextView
        android:id="@+id/respId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>