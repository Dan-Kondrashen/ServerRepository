<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"

    android:layout_marginTop="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:background="@drawable/border_simple_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/image_card"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_info"
            tools:text="титульник документа"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/space10"
            android:paddingStart="@dimen/space10"
            android:background="@drawable/border_for_document_preview"
            android:textSize="@dimen/h3"
            android:textStyle="bold"
            android:textColor="?colorPrimaryUltraDark"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/secondUserId"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/respId"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/space5"
            android:paddingBottom="@dimen/space3">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/user_name_text"
                android:text="@string/userFIO"
                android:paddingEnd="@dimen/space10"
                android:paddingStart="@dimen/space10"
                android:textSize="@dimen/h4"
                android:textStyle="bold"
                android:textColor="?colorPrimaryUltraDark"
                android:maxLines="1"
                android:ellipsize="end">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:id="@+id/user_company_text"
                    android:text="@string/company_name"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold"
                    android:textColor="?colorPrimaryUltraDark"
                    android:maxLines="3"
                    android:ellipsize="end">
                </TextView>
                <TextView android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:id="@+id/user_company_info"
                    android:text="@string/item"
                    android:textSize="18sp"
                    android:textColor="?colorPrimaryUltraDark"
                    android:maxLines="3"
                    android:ellipsize="end">
                </TextView>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/last_content_info"
                tools:text="какой-то текст для комментария очень"
                android:paddingEnd="@dimen/space10"
                android:paddingStart="@dimen/space10"
                android:textSize="@dimen/h4"
                android:textStyle="bold"
                android:textColor="?colorPrimaryUltraDark"
                android:maxLines="1"
                android:ellipsize="end">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView android:id="@+id/image_card"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/space5"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:gravity="center"
        app:cardCornerRadius="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/user_svg"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>
