<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentLogin">

    <LinearLayout
        android:id="@+id/et_container1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/et_container2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_fname"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/et_custom"
                android:hint="@string/fname"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/colorPrimaryUltraDark"
                android:textColorHint="@color/colorPrimaryUltraDark"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_fname"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:gravity="center|start"
                android:maxWidth="190dp"
                android:text="@string/important"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintWidth_min="wrap" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_lname"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/et_custom"
                android:hint="@string/lname"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/colorPrimaryUltraDark"
                android:textColorHint="@color/colorPrimaryUltraDark"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_lname"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:gravity="center|start"
                android:maxWidth="190dp"
                android:text="@string/important"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintWidth_min="wrap" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_mname"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/et_custom"
            android:hint="@string/mname"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/colorPrimaryUltraDark"
            android:textColorHint="@color/colorPrimaryUltraDark"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/et_container2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/et_container3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/password_view">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="?colorPrimaryUltraDark"
                app:hintTextAppearance="@style/hintForCustomEditTextStyle"

                style="@style/mainCustomTextInputLayoutStyle"
                android:hint="@string/email">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/resized_email_item"
                    android:drawablePadding="6dp"
                    android:drawableTint="?colorPrimaryUltraDark"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryUltraDark"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/email_view"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:paddingEnd="8dp"
                android:paddingTop="@dimen/space8"
                android:gravity="center|start"
                android:maxWidth="190dp"
                android:text="@string/important"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintWidth_min="wrap" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/password_view">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/hintForCustomEditTextStyle"
                style="@style/mainCustomTextInputLayoutStyle"
                android:hint="@string/phone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:drawableStart="@drawable/phone_svg"
                    android:drawablePadding="6dp"
                    android:textColorHint="@color/colorPrimaryUltraDark"
                    android:inputType="phone"
                    android:layout_marginBottom="5dp"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryUltraDark"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/et_container2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/phone_view"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:gravity="center|start"
                android:maxWidth="190dp"
                android:text="@string/important"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintWidth_min="wrap" />
    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/et_container3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.600">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/hintForCustomEditTextStyle"
            app:endIconMode="password_toggle"
            app:endIconTint="?colorPrimaryUltraDark"
            app:layout_constraintBottom_toTopOf="@+id/password_view"
            style="@style/mainCustomTextInputLayoutStyle"
            android:hint="@string/password_enter">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:drawableStart="@drawable/padlock_svg"
                android:drawablePadding="8dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryUltraDark"
                android:textColorHint="@color/colorPrimaryUltraDark"
                android:textSize="15sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/hintForCustomEditTextStyle"
            app:layout_constraintBottom_toTopOf="@+id/password_view"
            style="@style/mainCustomTextInputLayoutStyle"
            android:hint="@string/password_enter_redo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password_repeat"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/padlock_confirm_svg"
                android:drawablePadding="8dp"

                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryUltraDark"
                android:textColorHint="@color/colorPrimaryUltraDark"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/app_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="@string/app_nick"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/border_for_floating_menu"
        app:layout_constraintBottom_toTopOf="@+id/et_container1"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/user_role"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:padding="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:popupBackground="@color/colorPrimaryLight"
        android:background="@drawable/selector_dropdown"
        app:layout_constraintTop_toBottomOf="@id/et_container3" android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        style="@style/main_button_style"
        android:padding="@dimen/space8"
        android:text="@string/action_registr"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_role" />

    <ProgressBar
        android:layout_width="@dimen/space30"
        android:layout_height="@dimen/space30"
        app:layout_constraintBottom_toTopOf="@id/textInfo"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:gravity="center_vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/textInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration" />
    <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:gravity="center_vertical"
        android:padding="@dimen/space5"
        android:text="@string/swipe_to_log"
        android:lines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />
</androidx.constraintlayout.widget.ConstraintLayout>