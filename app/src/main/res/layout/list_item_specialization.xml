<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:elevation="8dp"
    android:translationZ="1000dp"
    android:background="@drawable/border_simple_list_item"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/list_item_specialization_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/list_item_specialization_name_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="4dp"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="16sp"
                android:ellipsize="end"
                android:text="@string/name_of_spec" />
            <ImageButton
                android:id="@+id/remove_btn"
                android:layout_height="35dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:background="@drawable/remove_image_btn"
                android:contentDescription="@string/delete" />
            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:background="@drawable/delete_image_btn"
                android:contentDescription="@string/delete"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/list_item_specialization_name_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="sdvfhhggdndhg"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        android:layout_below="@+id/list_item_specialization_name_view">
        <TextView
            android:id="@+id/list_item_status_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center_vertical|start"
            android:textSize="16sp"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="3"
            android:text="@string/status"/>
        <TextView
            android:id="@+id/list_item_status_info"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="16sp"
            android:ellipsize="end"
            android:minLines="1"
            android:maxLines="3"
            tools:text="Подтверждена!"/>
    </LinearLayout>
    <TextView
        android:id="@+id/list_item_education_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_status_view"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:minLines="1"
        android:layout_centerInParent="true"
        android:padding="2dp"
        android:text="@string/education"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/list_item_education_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/list_item_education_text"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_item_education_place_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:maxLines="3"
                android:minLines="1"
                android:text="@string/placeName"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/list_item_education_place_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:minLines="1"
                android:textSize="16sp"
                tools:text=" " />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/list_item_file_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_below="@+id/list_item_education_view"
        android:gravity="center"
        android:textSize="16sp"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="3"
        android:visibility="gone"
        tools:text=" "/>
    <LinearLayout
        android:layout_below="@id/list_item_file_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <androidx.cardview.widget.CardView android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space110"
            android:layout_marginEnd="@dimen/space10"
            android:layout_marginStart="@dimen/space10"
            android:layout_marginBottom="@dimen/space8"
            android:gravity="center"
            app:cardCornerRadius="@dimen/space20">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:gravity="center"
                android:src="@drawable/text_document_svg"
                android:scaleType="matrix"
                android:layout_height="@dimen/space110"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:gravity="end"
                android:background="?colorPrimaryLight">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:padding="@dimen/space5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    tools:text="Название документа"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/space8"
                    android:layout_marginBottom="@dimen/space5"
                    android:src="@drawable/download_svg"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:id="@+id/idView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</RelativeLayout>