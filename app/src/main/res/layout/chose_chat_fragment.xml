<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/LayoutDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_for_item_animation"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space3"
        android:layout_marginLeft="@dimen/space3"
        android:layout_marginRight="@dimen/space3"
        android:paddingTop="@dimen/space8"
        android:paddingRight="@dimen/space8"
        android:paddingLeft="@dimen/space5"
        android:paddingBottom="@dimen/space15"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/space10"
            android:background="@drawable/et_custom"
            android:drawableStart="@drawable/baseline_search_30"
            android:drawableTint="?colorPrimaryUltraDark"
            android:gravity="center_vertical"
            android:hint="@string/enter_text_for_filtration"
            android:paddingStart="@dimen/space3"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/infoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/no_chat"
            android:visibility="gone"
            android:layout_marginStart="@dimen/space45"
            android:layout_marginEnd="@dimen/space45"
            android:layout_centerVertical="true"/>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filter"
            android:layout_marginTop="@dimen/space3"
            android:layout_marginBottom="@dimen/space3">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatChoseRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </ScrollView>
    </RelativeLayout>
    <include
        android:id="@+id/bottom_bar"
        layout="@layout/bottom_nav_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>