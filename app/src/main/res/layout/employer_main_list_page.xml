<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false">

            <TextView
                android:id="@+id/documentsNewText"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:elevation="0dp"
                android:paddingTop="20dp"
                android:paddingEnd="16dp"
                android:paddingBottom="5dp"
                android:text="@string/resume_new"
                android:textAlignment="center"
                style="@style/headerText"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/new_document_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:clipToPadding="false"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_below ="@id/documentsNewText"
                app:layout_constraintTop_toBottomOf="@id/documentsNewText"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
            </androidx.recyclerview.widget.RecyclerView>
            <ProgressBar
                android:id="@+id/progressNew"
                android:layout_width="@dimen/space20"
                android:layout_height="@dimen/space20"
                android:layout_below="@id/part_time_document_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/documentsNewText"/>
            <TextView
                android:id="@+id/document_vacancy_text"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:elevation="0dp"
                style="@style/headerText"
                android:text="@string/hot_vacancy"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/new_document_recycler_view"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_below ="@id/new_document_recycler_view">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/document_for_user_abilities_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/document_vacancy_text"
                android:elevation="1dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/document_vacancy_text" />
            <ProgressBar
                android:id="@+id/progressUserAbilities"
                android:layout_width="@dimen/space20"
                android:layout_height="@dimen/space20"
                android:layout_below="@id/part_time_document_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/document_vacancy_text" />

            <TextView
                android:id="@+id/most_viewed_vacancy_text"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:elevation="0dp"
                style="@style/headerText"
                android:text="@string/most_viewed"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/document_for_user_abilities_recycler_view"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_below ="@id/new_document_recycler_view"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/most_viewed_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/document_vacancy_text"
                android:elevation="1dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/most_viewed_vacancy_text" />
            <ProgressBar
                android:id="@+id/progressMostViewed"
                android:layout_width="@dimen/space20"
                android:layout_height="@dimen/space20"
                android:layout_below="@id/part_time_document_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/most_viewed_vacancy_text" />
            <TextView
                android:id="@+id/part_time_document_text"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                style="@style/headerText"
                android:textSize="@dimen/h1"
                android:text="@string/part_time_text"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/most_viewed_recycler_view"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_below ="@id/new_document_recycler_view"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/part_time_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:clipToPadding="false"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_below="@id/part_time_document_text"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/part_time_document_text" />
            <ProgressBar
                android:id="@+id/progressPartTime"
                android:layout_width="@dimen/space20"
                android:layout_height="@dimen/space20"
                android:layout_below="@id/part_time_document_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/part_time_document_text" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include
        android:id="@+id/extra_bar"
        layout="@layout/extra_bar"
        android:elevation="2dp"/>
    <include
        android:id="@+id/bottom_bar"
        layout="@layout/bottom_nav_bar"
        android:elevation="2dp"/>
</RelativeLayout>