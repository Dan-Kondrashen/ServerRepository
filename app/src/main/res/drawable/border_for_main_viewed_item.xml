<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list >
            <item android:left="6dp" android:top="7dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="30dp"
                        android:topLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:topRightRadius="30dp"
                        />
                    <gradient android:startColor="?colorPrimaryUltraDark"
                        android:endColor="?colorPrimaryDark"
                        android:angle="135"/>
                </shape>
            </item>
            <item android:bottom="4dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="?colorPrimary"
                        android:endColor="?colorPrimaryLight"
                        android:angle="135"/>
                    <corners android:bottomLeftRadius="30dp"
                        android:topLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:topRightRadius="40dp"
                        />


                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list >
            <item android:left="6dp" android:top="7dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="30dp"
                        android:topLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:topRightRadius="30dp"
                        />
                    <gradient android:startColor="?colorPrimaryUltraDark"
                        android:endColor="?colorPrimaryUltraDark"
                        android:angle="135"/>
                </shape>
            </item>
            <item android:bottom="4dp" android:right="3dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="?colorPrimaryDark"
                        android:endColor="?colorPrimary"
                        android:angle="135"/>
                    <corners android:bottomLeftRadius="30dp"
                        android:topLeftRadius="30dp"
                        android:bottomRightRadius="30dp"
                        android:topRightRadius="40dp"
                        />


                </shape>
            </item>
        </layer-list>
    </item>
</selector>