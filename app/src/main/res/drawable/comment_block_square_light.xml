<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <layer-list >
            <item android:right="3dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="12dp"
                        android:topLeftRadius="12dp"
                        android:bottomRightRadius="12dp"
                        />
                    <gradient android:startColor="?colorPrimaryDark"
                        android:endColor="?colorPrimaryDark"
                        android:angle="135"/>
                </shape>
            </item>
            <item android:bottom="2.5dp" android:left="2.5dp">
                <shape android:shape="rectangle">
                    <gradient android:startColor="?colorPrimaryLight"
                        android:endColor="?colorPrimaryLight"
                        android:angle="135"/>
                    <corners android:bottomLeftRadius="12dp"
                        android:topLeftRadius="12dp"
                        android:bottomRightRadius="12dp"

                        />


                </shape>
            </item>
        </layer-list>
    </item>
</selector>